= bootstrap_form_tag url: "/auth/identity/register" do |f|
  - if @identity.errors.any?
    .alert.alert-danger
      %h4 Please fix the following errors
      %ul
        - @identity.errors.full_messages.each do |error|
          %li= error
  = f.text_field :name, value: @identity.try(:name)
  = f.text_field :email, value: @identity.try(:email)
  = f.password_field :password
  = f.password_field :password_confirmation
  .actions.text-right
    = f.primary "Register"
